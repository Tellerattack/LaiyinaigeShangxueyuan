<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:id="@+id/ll_item">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_default_user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_8"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论人"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_adopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin_8"
                android:drawableLeft="@drawable/selector_adopt"
                android:drawablePadding="@dimen/default_margin_4"
                android:text="0"
                android:textColor="@drawable/text_home_tab_selector"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin_8"
                android:drawableLeft="@drawable/selector_like"
                android:drawablePadding="@dimen/default_margin_4"
                android:text="0"
                android:textColor="@drawable/text_home_tab_selector"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:drawableLeft="@drawable/spbf_comment"
                android:drawablePadding="@dimen/default_margin_4"
                android:text="0"
                android:textColor="@color/color_888888"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:scaleType="centerCrop"
                android:src="@drawable/spbf_trash"
                android:visibility="gone"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_4"
            android:text="2017-02-28 18:06"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_8"
            android:text="评论内容"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />


        <View style="@style/GreyDivider"
            android:layout_marginTop="@dimen/default_margin"/>

    </LinearLayout>

</LinearLayout>