<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:id="@+id/ll_item">

    <LinearLayout
        android:id="@+id/ll_dry_cargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:button="@null"
            android:background="@drawable/cb_sort"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_margin"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_16"
            android:src="@drawable/homepage_play"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="运营音频：企业经营人的智慧"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dry_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin_8"
                    android:text="今天"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_dry_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="01:32"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/text_size_14" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>