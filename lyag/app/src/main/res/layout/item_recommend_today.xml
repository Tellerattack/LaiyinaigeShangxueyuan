<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:id="@+id/ll_item">

    <ImageView
        android:id="@+id/iv_recommend"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/default_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_6"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_home_size" />

        <TextView
            android:id="@+id/tv_duration_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总时长：00分钟"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_888888"
            android:layout_marginTop="@dimen/default_margin_6"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_6"
                android:background="@drawable/shape_item_theme_white_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_4"
                    android:layout_marginLeft="@dimen/default_margin_8"
                    android:layout_marginRight="@dimen/default_margin_8"
                    android:layout_marginTop="@dimen/default_margin_4"
                    android:text="更新至第五讲"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_13"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_6"
                android:layout_marginLeft="@dimen/default_margin_8"
                android:background="@drawable/shape_item_theme_white_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_margin_4"
                    android:layout_marginLeft="@dimen/default_margin_8"
                    android:layout_marginRight="@dimen/default_margin_8"
                    android:layout_marginTop="@dimen/default_margin_4"
                    android:text="更新至第五讲"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_size_13"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subscribe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/color_888888"
                android:textSize="@dimen/text_home_size" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/text_home_size"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>