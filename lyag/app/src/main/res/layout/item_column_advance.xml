<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_white"
    android:id="@+id/ll_item">

    <ImageView
        android:id="@+id/iv_advance"
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_margin_8"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专栏预告专栏预告专栏预告专栏预告专栏预告专栏预告专栏预告专栏预告专栏预告专栏预告"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="@dimen/default_margin_6"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上线时间：2018-02-08"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="@dimen/default_margin_6"
            />

        <View
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_study"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="已有不少人学习"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="188"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>