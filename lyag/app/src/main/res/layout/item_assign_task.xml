<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="学习任务标题"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_require"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:text="学习任务要求："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_weight="1"
            android:text="时间"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_all_done_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有人完成学习"
            android:layout_marginRight="@dimen/default_margin"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_13"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/default_margin_4"
                android:drawableRight="@drawable/nrdh_more"
                android:text=" 人未完成学习"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>