<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:background="@drawable/shape_rank_theme"
        android:paddingLeft="@dimen/default_margin_10"
        android:paddingRight="@dimen/default_margin_10"
        android:paddingTop="@dimen/default_margin_4"
        android:paddingBottom="@dimen/default_margin_4"
        android:layout_marginLeft="@dimen/default_margin"/>

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_default_user"
        android:layout_margin="@dimen/default_margin"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/color_theme"/>

    <TextView
        android:id="@+id/tv_score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学分"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_333333"
        android:layout_marginRight="@dimen/default_margin"/>

</LinearLayout>