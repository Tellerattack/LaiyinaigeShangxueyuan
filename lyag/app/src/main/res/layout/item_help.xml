<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <View style="@style/GreyDivider" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:drawablePadding="@dimen/default_margin_4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:text=""
        android:textColor="@color/color_888888"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:text=""
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:ellipsize="end"
        android:maxLines="6"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/default_margin_4"
            android:drawableStart="@drawable/hd_bq"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="标签"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/selector_like"
            android:drawablePadding="@dimen/default_margin_4"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableLeft="@drawable/tzxq_comment"
            android:drawablePadding="@dimen/default_margin_4"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View style="@style/GreyDivider" />

</LinearLayout>