<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_revise_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_subtitle_size"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:drawablePadding="@dimen/default_margin_8"
                android:drawableRight="@drawable/mine_more"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_subtitle_size"/>

        </LinearLayout>

        <View
            style="@style/GreyDivider"
            android:layout_marginLeft="@dimen/default_margin"/>

        <LinearLayout
            android:id="@+id/ll_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight="1"
                android:text="清除缓存"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_subtitle_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:drawablePadding="@dimen/default_margin_8"
                android:drawableRight="@drawable/mine_more"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_subtitle_size"/>

        </LinearLayout>

        <View
            style="@style/GreyDivider"
            android:layout_marginLeft="@dimen/default_margin"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:layout_weight="1"
                android:text="当前版本号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_subtitle_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_margin"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_subtitle_size"/>

        </LinearLayout>

        <View style="@style/GreyDivider"/>

    </LinearLayout>


    <View
        style="@style/GreyDivider"
        android:layout_marginTop="@dimen/default_margin"/>

    <LinearLayout
        android:id="@+id/ll_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="退出登录"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_subtitle_size"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        style="@style/GreyDivider"/>

</LinearLayout>